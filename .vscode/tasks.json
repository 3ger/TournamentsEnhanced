{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build (DEBUG)",
        "test"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "args": [
        "msbuild",
        // "/v:d",
        "/t:build",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=Debug",
        "/p:Platform=x64",
        "${workspaceFolder}\\test\\TournamentsEnhancedTests.csproj"
      ],
      "problemMatcher": "$msCompile",
    },
    {
      "label": "build (DEBUG)",
      "command": "dotnet",
      "args": [
        "msbuild",
        "/t:build",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=Debug",
        "/p:Platform=x64",
        "./TournamentsEnhanced.csproj"
      ],
      "problemMatcher": "$msCompile",
    },
    {
      "label": "build (DEBUG) (INSTALL TO BANNERLORD)",
      "command": "dotnet",
      "args": [
        "msbuild",
        "/t:build",
        "/p:GenerateFullPaths=true",
        "/p:Platform=x64",
        "/p:Configuration=DebugOutputToBannerlord",
        "/p:BannerlordPath=C:\\SteamApp\\steamapps\\common\\Mount & Blade II Bannerlord",
        "${workspaceFolder}/TournamentsEnhanced.csproj"
      ],
      "problemMatcher": "$msCompile",
    },
    {
      "label": "build (DEBUG) (LAPTOP) (INSTALL TO BANNERLORD)",
      "command": "dotnet",
      "args": [
        "msbuild",
        "/t:build",
        "/p:GenerateFullPaths=true",
        "/p:Platform=x64",
        "/p:Configuration=DebugOutputToBannerlordLaptop",
        "/p:BannerlordPath=C:\\Program Files (x86)\\Steam\\steamapps\\common\\Mount & Blade II Bannerlord",
        "${workspaceFolder}/TournamentsEnhanced.csproj"
      ],
      "problemMatcher": "$msCompile",
    },
    {
      "label": "build (RELEASE)",
      "command": "dotnet",
      "args": [
        "msbuild",
        "/t:build",
        "/p:GenerateFullPaths=true",
        "/p:Platform=x64",
        "/p:Configuration=Release",
        "${workspaceFolder}/TournamentsEnhanced.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build (RELEASE) (INSTALL TO BANNERLORD)",
      "command": "dotnet",
      "args": [
        "msbuild",
        "/t:clean;build",
        "/p:GenerateFullPaths=true",
        "/p:Platform=x64",
        "/p:Configuration=ReleaseOutputToBannerlord",
        "${workspaceFolder}/TournamentsEnhanced.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}